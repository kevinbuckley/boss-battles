name: Daily Build and Push

on:
  schedule:
    - cron: '0 18 * * *' # Runs at 18:00 UTC every day

jobs:
  build-and-push:
    runs-on: ubuntu-latest

    steps:
    - name: Checkout Repository
      uses: actions/checkout@v2
      with:
        fetch-depth: 0 # Fetches all history for .Git Data

    - name: Setup Node.js
      uses: actions/setup-node@v2
      with:
        node-version: '14' # Specify the Node.js version

    - name: Run build script
      run: |
        cd ./generator
        npm install
        npm run start

    - name: Commit and Push Changes
      run: |
        git config --global user.email "kbuckley17@gmail.com"
        git config --global user.name "Kevin Buckley"
        git add -A
        git commit -m "Daily Generation"
        git push
